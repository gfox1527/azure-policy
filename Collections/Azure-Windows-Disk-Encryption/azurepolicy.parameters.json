{
    "keyVaultName": {
        "type": "String",
        "metadata": {
            "displayName": "Key Vault Name",
            "description": "Name of the KeyVault to place the volume encryption key"
        }
    },
    "keyVaultResourceGroup": {
        "type": "String",
        "metadata": {
            "displayName": "Key Vault Resource Group",
            "description": "Resource group of the KeyVault"
        }
    },
    "keyEncryptionKeyURL": {
        "type": "String",
        "metadata": {
            "displayName": "Key Encryption Key",
            "description": "URL of the KeyEncryptionKey used to encrypt the volume encryption key"
        },
        "defaultValue": ""
    },
    "volumeType": {
        "type": "String",
        "metadata": {
            "displayName": "Volume Type",
            "description": "Type of the volume OS or Data to perform encryption operation"
        },
        "defaultValue": "All"
    },
    "forceUpdateTag": {
        "type": "String",
        "metadata": {
            "displayName": "Force Update Tag",
            "description": "Pass in an unique value like a GUID everytime the operation needs to be force run"
        },
        "defaultValue": "1.0"
    },
    "resizeOSDisk": {
        "type": "Boolean",
        "metadata": {
            "displayName": "Resize OS Disk",
            "description": "Should the OS partition be resized to occupy full OS VHD before splitting system volume"
        },
        "defaultValue": false
    }
}